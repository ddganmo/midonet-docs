<?xml version="1.0" encoding="UTF-8"?>
<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.midonet</groupId>
        <artifactId>midonet-docs-parent-pom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>org.midonet</groupId>
    <artifactId>midonet-docs-operation-guide</artifactId>
    <version>2015.02-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>${project.artifactId} v${project.version}</name>

    <properties>
        <file.book.basename>book_operation_guide</file.book.basename>
    </properties>

    <build>
        <plugins>
            <!-- asciidoctor-maven-plugin -->
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>asciidoc-to-docbook</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>process-asciidoc</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>../../docs/operation-guide/src</sourceDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- asciidoctor-maven-plugin -->

            <!-- midonet-docs-maven-plugin -->
            <plugin>
                <groupId>org.midonet</groupId>
                <artifactId>midonet-docs-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>docbook-to-pdf-and-webhelp</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-webhelp</goal>
                        </goals>
                        <configuration>
                            <webhelpDirname>operation-guide</webhelpDirname>
                            <pdfFilenameBase>MidoNet_Operation_Guide_${project.version}</pdfFilenameBase>
                            <preProcess>
                                <echo>Adding xml:id attribute to Docbook's book element.</echo>
                                <replace file="${dir.tmp.asciidoc2docbook}/${file.book.basename}.xml" summary="true">
                                    <replacetoken><![CDATA[<book]]></replacetoken>
                                    <replacevalue><![CDATA[<book xml:id="book_operation_guide"]]></replacevalue>
                                </replace>
                                <!-- Add status bar for DRAFT versions.
                                <echo>Adding status bar text to Docbook XML.</echo>
                                <replace file="${dir.tmp.asciidoc2docbook}/${file.book.basename}.xml" summary="true">
                                    <replacetoken><![CDATA[<info>]]></replacetoken>
                                    <replacevalue>
                                        <![CDATA[
                                            <?rax status.bar.text.font.size="40px" status.bar.text="DRAFT"?>
                                            <?rax subtitle.font.size="17px" title.font.size="32px"?>
                                            <info>
                                        ]]>
                                    </replacevalue>
                                </replace>
                                -->
                            </preProcess>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- midonet-docs-maven-plugin -->
        </plugins>
    </build>

</project>
